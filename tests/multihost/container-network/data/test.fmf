/server/setup:
    require: httpd
    test: |
        systemctl start httpd
        echo 'podman rulez' > /var/www/html/index.html

/client:
    test: |
        echo "Guest topology stored in '$TMT_TOPOLOGY_BASH':"
        cat "$TMT_TOPOLOGY_BASH"
        . "$TMT_TOPOLOGY_BASH"

        for count in {1..33}; do
            echo "curl message from http-server, attempt $count."
            curl --silent http://${TMT_GUESTS[httpd-server.hostname]}/ | grep -q 'podman rulez'
            sleep .$[$RANDOM % 10]
        done
